<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>
                <i class="fas fa-globe me-2"></i>
                Domain Groups
            </h1>
            <a href="/new" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>
                New Group
            </a>
        </div>
    </div>
</div>

<% unless @domains.empty? %>
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-search"></i>
                                </span>
                                <input type="text" class="form-control" id="searchInput" 
                                       placeholder="Search domain groups..." 
                                       autocomplete="off">
                            </div>
                        </div>
                        <div class="col-md-6 mt-2 mt-md-0">
                            <div class="d-flex justify-content-md-end align-items-center">
                                <small class="text-muted me-3">
                                    <span id="visibleCount"><%= @domains.size %></span> of 
                                    <span id="totalCount"><%= @domains.size %></span> groups
                                </small>
                                <button type="button" class="btn btn-sm btn-outline-secondary" onclick="clearSearch()">
                                    <i class="fas fa-times me-1"></i>
                                    Clear
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% end %>

<% if @domains.empty? %>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No domain groups found</h5>
                    <p class="text-muted">Create your first domain group to get started</p>
                    <a href="/new" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>
                        Create Domain Group
                    </a>
                </div>
            </div>
        </div>
    </div>
<% else %>
    <div class="row" id="domainGroupsContainer">
        <% @domains.sort.each do |name, data| %>
            <div class="col-md-6 col-lg-4 mb-4 domain-group-card" data-group-name="<%= name.downcase %>">
                <div class="card domain-group">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-layer-group me-2"></i>
                            <%= name %>
                        </h5>
                    </div>
                    <div class="card-body">
                        <% 
                        stats = @domain_stats[name] || {}
                        domain_group = @domain_groups.find { |g| g.name == name }
                        %>
                        
                        <!-- Statistics Row -->
                        <div class="row mb-3">
                            <div class="col-6">
                                <div class="text-center">
                                    <div class="h5 mb-0 text-primary"><%= stats[:total_domains] || 0 %></div>
                                    <small class="text-muted">Domains</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="text-center">
                                    <div class="h5 mb-0 text-info"><%= stats[:total_routes] || 0 %></div>
                                    <small class="text-muted">IP Routes</small>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Settings Section -->
                        <% if data.is_a?(Hash) && data['settings'] %>
                            <div class="settings-section mb-3">
                                <h6><i class="fas fa-cog me-2"></i>Settings</h6>
                                <% if data['settings']['mask'] %>
                                    <div><small class="text-muted">Mask: <code><%= data['settings']['mask'] %></code></small></div>
                                <% end %>
                                <% if data['settings']['interfaces'] %>
                                    <div><small class="text-muted">Interfaces: <span class="badge bg-info"><%= data['settings']['interfaces'] %></span></small></div>
                                <% end %>
                            </div>
                        <% end %>
                        
                        <!-- Sync Status Section -->
                        <% if stats[:total_routes] && stats[:total_routes] > 0 %>
                            <div class="settings-section mb-3">
                                <h6><i class="fas fa-sync me-2"></i>Sync Status</h6>
                                <div class="d-flex justify-content-between">
                                    <small class="text-success">
                                        <i class="fas fa-check me-1"></i>
                                        <%= stats[:synced_routes] || 0 %> synced
                                    </small>
                                    <% if stats[:pending_routes] && stats[:pending_routes] > 0 %>
                                        <small class="text-warning">
                                            <i class="fas fa-clock me-1"></i>
                                            <%= stats[:pending_routes] %> pending
                                        </small>
                                    <% end %>
                                </div>
                            </div>
                        <% end %>
                        
                        <!-- Domain Types -->
                        <% if stats[:total_domains] && stats[:total_domains] > 0 %>
                            <div class="mb-3">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <h6><i class="fas fa-list me-2"></i>Domain Types</h6>
                                    <a href="/ip-addresses?group_id=<%= domain_group&.id %>" class="btn btn-sm btn-outline-info">
                                        <i class="fas fa-network-wired me-1"></i>
                                        View Routes
                                    </a>
                                </div>
                                
                                <% if stats[:regular_domains] && stats[:regular_domains] > 0 %>
                                    <div class="d-flex justify-content-between">
                                        <small class="text-muted">
                                            <i class="fas fa-globe me-1"></i>Regular
                                        </small>
                                        <span class="badge bg-primary"><%= stats[:regular_domains] %></span>
                                    </div>
                                <% end %>
                                
                                <% if stats[:follow_dns_domains] && stats[:follow_dns_domains] > 0 %>
                                    <div class="d-flex justify-content-between">
                                        <small class="text-muted">
                                            <i class="fas fa-eye me-1"></i>DNS Monitoring
                                        </small>
                                        <span class="badge bg-success"><%= stats[:follow_dns_domains] %></span>
                                    </div>
                                <% end %>
                            </div>
                        <% end %>
                        
                        <!-- Sample Domains -->
                        <% 
                        domains_list = data.is_a?(Hash) ? data['domains'] : data
                        domains_list ||= []
                        %>
                        
                        <% if domains_list.any? %>
                            <div class="domain-list">
                                <h6><i class="fas fa-samples me-2"></i>Sample Domains</h6>
                                <% domains_list.sort.first(3).each do |domain| %>
                                    <span class="domain-item">
                                        <i class="fas fa-globe fa-xs me-1"></i>
                                        <%= domain %>
                                    </span>
                                <% end %>
                                <% if domains_list.size > 3 %>
                                    <span class="domain-item">
                                        <i class="fas fa-ellipsis-h"></i>
                                        +<%= domains_list.size - 3 %> more
                                    </span>
                                <% end %>
                            </div>
                        <% end %>
                        
                        <!-- Last Updated -->
                        <% if stats[:last_updated] %>
                            <div class="mt-2">
                                <small class="text-muted">
                                    <i class="fas fa-clock me-1"></i>
                                    Updated <%= stats[:last_updated].strftime('%m/%d %H:%M') %>
                                </small>
                            </div>
                        <% end %>
                    </div>
                    <div class="card-footer">
                        <div class="btn-group w-100">
                            <a href="/edit/<%= name %>" class="btn btn-outline-primary">
                                <i class="fas fa-edit me-1"></i>
                                Edit
                            </a>
                            <button type="button" class="btn btn-outline-danger" onclick="deleteDomainGroup('<%= name %>')">
                                <i class="fas fa-trash me-1"></i>
                                Delete
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
<% end %>

<script>
    // Search functionality
    const searchInput = document.getElementById('searchInput');
    const domainCards = document.querySelectorAll('.domain-group-card');
    const visibleCount = document.getElementById('visibleCount');
    const totalCount = document.getElementById('totalCount');

         if (searchInput) {
         searchInput.addEventListener('input', function() {
             const searchTerm = this.value.toLowerCase().trim();
             let visible = 0;

             domainCards.forEach(card => {
                 const groupName = card.getAttribute('data-group-name');
                 const shouldShow = searchTerm === '' || groupName.includes(searchTerm);
                 
                 if (shouldShow) {
                     card.style.display = 'block';
                     visible++;
                     
                     // Add highlight effect for matching cards
                     if (searchTerm !== '' && groupName.includes(searchTerm)) {
                         card.classList.add('search-highlight');
                     } else {
                         card.classList.remove('search-highlight');
                     }
                 } else {
                     card.style.display = 'none';
                     card.classList.remove('search-highlight');
                 }
             });

             if (visibleCount) {
                 visibleCount.textContent = visible;
             }

             // Show/hide no results message
             toggleNoResultsMessage(visible === 0 && searchTerm !== '');
         });

        // Focus search input on Ctrl+F or Cmd+F
        document.addEventListener('keydown', function(e) {
            if ((e.ctrlKey || e.metaKey) && e.key === 'f') {
                e.preventDefault();
                searchInput.focus();
                searchInput.select();
            }
        });
    }

    function clearSearch() {
        if (searchInput) {
            searchInput.value = '';
            searchInput.dispatchEvent(new Event('input'));
            searchInput.focus();
        }
    }

    function toggleNoResultsMessage(show) {
        let noResultsMsg = document.getElementById('noResultsMessage');
        
        if (show && !noResultsMsg) {
            noResultsMsg = document.createElement('div');
            noResultsMsg.id = 'noResultsMessage';
            noResultsMsg.className = 'col-12 text-center py-5';
            noResultsMsg.innerHTML = `
                <div class="card">
                    <div class="card-body">
                        <i class="fas fa-search fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No matching domain groups found</h5>
                        <p class="text-muted">Try adjusting your search terms</p>
                        <button type="button" class="btn btn-outline-primary" onclick="clearSearch()">
                            <i class="fas fa-times me-2"></i>
                            Clear Search
                        </button>
                    </div>
                </div>
            `;
            document.getElementById('domainGroupsContainer').appendChild(noResultsMsg);
        } else if (!show && noResultsMsg) {
            noResultsMsg.remove();
        }
    }

         // Auto-refresh every 30 seconds (disabled during active search)
     setInterval(() => {
         if (!searchInput || searchInput.value.trim() === '') {
             location.reload();
         }
     }, 30000);
</script> 